	</div>
	<div class="clearfix"></div>
	<?php if($inputRelated): ?>
	<div class="related">
		<h3>Tin liên quan</h3>
		<ul>
			<?php foreach($inputRelated as $value): ?>
			<li><a href="<?php echo url($value->slug); ?>" title=""><i class="fa fa-caret-right"></i> [<?php echo $value->typeNew->name; ?>] <?php echo $value->title; ?></a></li>
			<?php endforeach; ?>
		</ul>
	</div>
