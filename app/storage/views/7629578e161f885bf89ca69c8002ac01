<?php if($slide = AdminSlide::find($slideId)): ?>
	<?php echo HTML::script('assets/js/owl.carousel.js'); ?>

	<?php echo HTML::style('assets/css/owl.carousel.css'); ?>

	<?php echo HTML::style('assets/css/owl.theme.css'); ?>

	<!-- Demo -->
	<style>
		#owl-demo .itemslide img {
			text-align: center;
			display: block;
			max-width: 100% !important;
			height: auto;
			margin: 0 auto;
		}
	</style>
	<script>
		var time = <?php if($slide->config_time): ?><?php echo $slide->config_time * 100; ?><?php endif; ?>;
		var navigation = <?php if($slide->navigation == ENABLED): ?><?php echo 'true'; ?><?php else: ?><?php echo 'false'; ?><?php endif; ?>;
		var autoplay = <?php if($slide->autoplay == ENABLED): ?><?php echo 'true'; ?><?php else: ?><?php echo 'false'; ?><?php endif; ?>;
		var pagination = <?php if($slide->pagination == ENABLED): ?><?php echo 'true'; ?><?php else: ?><?php echo 'false'; ?><?php endif; ?>;
		$(document).ready(function() {
			$("#owl-demo").owlCarousel({
				navigation : navigation,
				slideSpeed : time,
				autoPlay: autoplay,
				paginationSpeed : time,
				pagination: pagination,
				singleItem : true,
			});
		});
	</script>
	<div id="demo">
		<div id="owl-demo" class="owl-carousel">
			<?php foreach($slide->images as $image): ?>
				<div class="itemslide"><img src="<?php echo url(UPLOAD_IMAGE_SLIDE . '/image'. '/' . $slideId . '/' . $image->image_url); ?>" alt=""></div>
			<?php endforeach; ?>
		</div>
	</div>
<?php endif; ?>