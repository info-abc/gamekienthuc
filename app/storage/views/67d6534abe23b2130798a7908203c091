<?php $__env->startSection('title'); ?>
<?php echo $title='Danh sách tin tức'; ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

<div class="list">

	<div class="title_center">
		<h1>Danh sách tin tức</h1>
	</div>

	<?php foreach($inputListNews as $value): ?>
		<div class="list-item">
			<div class="list-image">
				<a href="<?php echo action('SiteNewsController@show', $value->slug); ?>">
					<img class="image_fb" src="<?php echo url(UPLOADIMG . '/news'.'/'. $value->id . '/' . $value->image_url); ?>" />
				</a>
			</div>
			<div class="list-text">
				<h3>
					<a href="<?php echo action('SiteNewsController@show', $value->slug); ?>">
						[<?php echo $value->typeNew->name; ?>] <?php echo $value->title; ?>

					</a>
				</h3>
				<p><?php echo limit_text(strip_tags($value->description), TEXTLENGH_DESCRIPTION); ?></p>
			</div>
		</div>
	<?php endforeach; ?>
</div>

<?php echo $__env->make('site.common.paginate', array('input' => $inputListNews), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('site.layout.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>