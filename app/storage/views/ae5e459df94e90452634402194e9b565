<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc><?php echo url(); ?></loc>
        <priority>0.5</priority>
    </url>
    <?php foreach(SiteMap::getTypeUrlSiteMap() as $type): ?>
    <url>
    	<loc><?php echo url().'/'.$type->slug; ?></loc>
		<changefreq>weekly</changefreq>
		<priority>0.8</priority>
    </url>
    <?php endforeach; ?>

    <?php foreach(SiteMap::getGameUrlSiteMap() as $game): ?>
	    <url>
	    	<loc><?php echo url().'/'.Type::find($game->type_main)->slug.'/'.$game->slug; ?></loc>
			<lastmod><?php echo Carbon\Carbon::createFromFormat('Y-m-d H:i:s', $game->start_date)->format('Y-m-d'); ?></lastmod>
			<changefreq>weekly</changefreq>
			<priority>0.5</priority>
	    </url>
	<?php endforeach; ?>

	<?php foreach(SiteMap::getNewUrlSiteMap() as $new): ?>
	    <url>
	    	<loc><?php echo url().'/'.'tin-tuc'.'/'.$new->slug; ?></loc>
			<lastmod><?php echo Carbon\Carbon::createFromFormat('Y-m-d H:i:s', $new->start_date)->format('Y-m-d'); ?></lastmod>
			<changefreq>weekly</changefreq>
			<priority>0.5</priority>
	    </url>
	<?php endforeach; ?>
</urlset>
