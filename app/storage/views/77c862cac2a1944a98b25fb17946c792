<?php $__env->startSection('title'); ?>
<?php echo $title=$type->name; ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

<div class="box">
	<h1>Game <?php echo $type->name; ?> hay nhất</h1>
	<?php
		$games = CommonGame::boxGameByType($type);
		$count = ceil(count($games->get())/PAGINATE_BOXGAME);
	 ?>
	<div class="swiper-container">
		<div class="swiper-wrapper">
			<?php for($i = 0; $i < $count ; $i ++): ?>
				<div class="swiper-slide boxgame">
					<div class="row">
					<?php
						$listGame = $games->orderBy('count_play', 'desc')->orderBy('start_date', 'desc')->take(PAGINATE_BOXGAME)->skip($i * PAGINATE_BOXGAME)->get();
					?>
						<?php foreach($listGame as $game): ?>
							<?php echo $__env->make('site.game.gameitem', array('game' => $game), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
						<?php endforeach; ?>
					</div>
				</div>
			<?php endfor; ?>
		</div>
		<div class="swiper-pagination"></div>
		<div class="boxgame-pagination">
			<a class="prev"><i class="fa fa-caret-left"></i> Trang trước</a>
			<div class="boxgame-pagenumber"><span class="numberPage">1</span>/<?php echo $count; ?></div>
			<a class="next">Trang sau <i class="fa fa-caret-right"></i></a>
		</div>
	</div>
</div>

<?php /* quang cao */ ?>
<?php echo $__env->make('site.common.ad', array('adPosition' => CHILD_PAGE_RELATION), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<div class="box">
	<h1>Game <?php echo $type->name; ?> mới nhất</h1>
	<?php
		$games = CommonGame::boxGameByType($type);
		$count = ceil(count($games->get())/PAGINATE_BOXGAME);
	 ?>
	<div class="swiper-container">
		<div class="swiper-wrapper">
			<?php for($i = 0; $i < $count ; $i ++): ?>
				<div class="swiper-slide boxgame">
					<div class="row">
					<?php
						$listGame = $games->orderBy('start_date', 'desc')->take(PAGINATE_BOXGAME)->skip($i * PAGINATE_BOXGAME)->get();
					?>
						<?php foreach($listGame as $game): ?>
							<?php echo $__env->make('site.game.gameitem', array('game' => $game), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
						<?php endforeach; ?>
					</div>
				</div>
			<?php endfor; ?>
		</div>
		<div class="swiper-pagination"></div>
		<div class="boxgame-pagination">
			<a class="prev"><i class="fa fa-caret-left"></i> Trang trước</a>
			<div class="boxgame-pagenumber"><span class="numberPage">1</span>/<?php echo $count; ?></div>
			<a class="next">Trang sau <i class="fa fa-caret-right"></i></a>
		</div>
	</div>
</div>

<?php echo $__env->make('site.game.scriptbox', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('site.layout.default', array('seoMeta' => CommonSite::getMetaSeo('Type', $type->id), 'seoImage' => FOLDER_SEO_GAMETYPE . '/' . $type->id), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>