<?php $__env->startSection('title'); ?>
<?php echo $title='Tìm kiếm game'; ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

<?php echo $__env->make('site.common.ad', array('adPosition' => CHILD_PAGE, 'modelName' => 'CategoryParent', 'modelId' => 1), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<div class="list">
	<?php if(count($inputsearchGame) > 0): ?>
		<div class="title_left">
			<h1>Kết quả tìm kiếm theo từ khóa "<?php echo $input['search']; ?>"</h1>
		</div>
		<?php foreach($inputsearchGame as $value): ?>
			<div class="list-item">
				<div class="list-image">
					<a href="<?php echo CommonGame::getUrlGame($value->slug); ?>">
						<img class="image_avata_game" src="<?php echo url(UPLOADIMG . '/game_avatar'. '/' . $value->image_url); ?>" />
					</a>
				</div>
				<div class="list-text">
					<h3>
						<a href="<?php echo CommonGame::getUrlGame($value->slug); ?>">
							<?php echo limit_text($value->name, TEXTLENGH); ?>

						</a>
					</h3>
					<?php if($value->parent_id == GAMEOFFLINE): ?>
						<span><?php echo getZero($value->count_download); ?> lượt tải</span>
					<?php else: ?>
						<span><?php echo getZero($value->count_play); ?> lượt chơi</span>
					<?php endif; ?>
					<p><?php echo limit_text(strip_tags($value->description), TEXTLENGH_DESCRIPTION); ?></p>
				</div>
			</div>
		<?php endforeach; ?>
	<?php else: ?>
		<?php echo $__env->make('site.common.boxgame', array('inputSearch' => $input['search'], 'text' => 'kết quả nào với từ khóa'), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
	<?php endif; ?>
</div>

<?php echo $__env->make('site.common.paginate', array('input' => $inputsearchGame), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('site.layout.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>