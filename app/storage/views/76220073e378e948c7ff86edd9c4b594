<div class="box">
	<h1><?php echo $categoryParent->name; ?> hay nhất</h1>
	<div id="owl1" class="owl-carousel">
		<?php for($i = 0; $i < $count ; $i ++): ?>
			<div class="boxgame">
				<div class="row">
				<?php
					$listGame = $games->orderBy('count_play', 'desc')->take(PAGINATE_BOXGAME)->skip($i * PAGINATE_BOXGAME)->get();
				?>
					<?php foreach($listGame as $game): ?>
						<?php echo $__env->make('site.game.gameitem', array('game' => $game), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
					<?php endforeach; ?>
				</div>
			</div>
		<?php endfor; ?>
	</div>
	<div class="boxgame-pagination">
		<a class="prev" id="prev1"><i class="fa fa-caret-left"></i> Trang trước</a>
